{
  "openapi": "3.0.0",
  "info": {
    "title": "GovData.de CKAN API",
    "version": "1.0.0",
    "description": "API for accessing and managing datasets of GovData.de, the German national data portal."
  },
  "servers": [
    {
      "url": "https://www.govdata.de/ckan/api/3/"
    }
  ],
  "paths": {
    "/action/package_search": {
      "get": {
        "summary": "Search for datasets",
        "operationId": "package_search",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "description": "Search query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "fq",
            "in": "query",
            "description": "Filter query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sort",
            "in": "query",
            "description": "Sorting options",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful search",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SearchResponse"
                }
              }
            }
          }
        }
      }
    },
    "/action/package_show": {
      "get": {
        "summary": "Retrieve a dataset by ID",
        "operationId": "package_show",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "description": "Dataset ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful retrieval",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DatasetResponse"
                }
              }
            }
          },
          "404": {
            "description": "Dataset not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SearchResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "result": {
            "type": "object",
            "properties": {
              "count": {
                "type": "integer"
              },
              "results": {
                "type": "array",
                "items": {
                  "type": "object"
                }
              }
            }
          }
        }
      },
      "DatasetResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "result": {
            "type": "object"
          }
        }
      }
    }
  }
}
